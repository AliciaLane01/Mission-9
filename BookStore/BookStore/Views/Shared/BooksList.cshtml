@{
}
@model Book

<div class="card m-1 p-1" >
    <p class="fw-bold bg-light text-black" style="font-size: large; padding-left: 60px">Title: @Model.Title</p>
    <p style="padding-left: 60px">Author: @Model.Author</p>
    <p style="padding-left: 60px">Publisher: @Model.Publisher</p>
    <p style="padding-left: 60px">Isbn: @Model.Isbn</p>
    <p style="padding-left: 60px">Classification: @Model.Classification</p>
    <p style="padding-left: 60px">Category: @Model.Category</p>
    <p style="padding-left: 60px">PageCount: @Model.PageCount</p>
    <p style="padding-left: 60px">Price: $@Model.Price</p>

    <form method="post" asp-page="/AddToCart">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            
            <button type="submit" class="btn-info float-end text-black">Add to Cart</button>
        </span>
    </form>
</div>